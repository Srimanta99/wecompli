<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#362D98">
   <!-- <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>-->
    <include
        android:id="@+id/mainView"
        layout="@layout/home_header"></include>
    <RelativeLayout
        android:layout_width="@dimen/_210sdp"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_sidemenu"
        android:layout_gravity="start">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_sidemenu"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/user_picture"
                app:civ_border_color="@color/header_text_color"
                app:civ_border_width="@dimen/_2sdp" />

            <LinearLayout
                android:id="@+id/rl_headercontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/profile_image"
                android:orientation="vertical">
                <!--<TextView
                    android:id="@+id/tv_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    android:textSize="@dimen/_14sdp" />-->

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:id="@+id/tv_companyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_text_color"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textColor="@color/menu_text_color"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@color/header_text_color"></TextView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_sidemenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_startcheck"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/rec_sidemenu"

            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/checks"

                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_startcheck"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/start_chk"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/menu_text_color"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_5sdp"
           android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/menu_sepertor_color"></TextView>
        <LinearLayout
            android:id="@+id/ll_adhocfault"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/rec_sidemenu"

            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/adhocfaults"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_adhofault"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/ad_hoc_fault"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/menu_text_color"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/menu_sepertor_color"></TextView>
        <LinearLayout
            android:id="@+id/ll_repair"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ll_startcheck"

            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/fault_repair"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_repair"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/repair_menu"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/menu_text_color"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/menu_sepertor_color"></TextView>
        <LinearLayout
            android:id="@+id/ll_incidenreport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ll_startcheck"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/incidentsreport"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_incidentreport"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/incident_report"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/menu_text_color"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/menu_sepertor_color"></TextView>
        <LinearLayout
            android:id="@+id/ll_docmangment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ll_startcheck"

            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/documents"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_docmangment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/doc_manag"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/menu_text_color"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/menu_sepertor_color"></TextView>

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/ll_repair"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/logout"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_lagout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/logout"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/menu_text_color"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>