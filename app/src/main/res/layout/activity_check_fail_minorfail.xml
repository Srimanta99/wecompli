<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logintopbg">
    <RelativeLayout
        android:id="@+id/rl_top_taskdetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
       >

        <RelativeLayout
            android:id="@+id/rl_back_taskdetails"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/left_arrow"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_taskname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14sdp"
            android:text="@string/edittask"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top_taskdetails"
        android:background="@drawable/rectangle_white_top_two_rounded_corner">


    <TextView
        android:id="@+id/tv_fault_managment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:text="@string/faultmangment"

        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:text="task"
        android:layout_below="@+id/tv_fault_managment"
        android:gravity="center"/>
    <EditText
        android:id="@+id/et_fault"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:hint="@string/aditioal_information"
        android:gravity="top"

        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/tv_task_name"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/rectangle_light_gray_rounded_corner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_below="@+id/et_fault"
        android:layout_above="@+id/rl_bottom"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/rectangle_light_gray_rounded_corner"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/rectangular_shape_white_round_corner_red_broder">
                <ImageView
                    android:id="@+id/fail_img_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_6sdp"
                    />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"

                    android:background="@drawable/photo_camera"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_7sdp"/>
                <TextView
                    android:id="@+id/tv_addimage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/select_image"
                    android:textSize="@dimen/_11sdp"
                    android:layout_below="@+id/img1"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rectangular_shape_white_round_corner_red_broder">
                <ImageView
                    android:id="@+id/fail_img_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_6sdp"
                    />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/photo_camera"/>
                <TextView
                    android:id="@+id/tv_addimage2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/select_image"
                    android:textSize="@dimen/_11sdp"
                    android:layout_below="@+id/img2"/>

            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rectangular_shape_white_round_corner_red_broder">
                <ImageView
                    android:id="@+id/fail_img_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_6sdp"
                    />
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/photo_camera"/>
                <TextView
                    android:id="@+id/tv_addimage3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/select_image"
                    android:textSize="@dimen/_11sdp"
                    android:layout_below="@+id/img3"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rectangular_shape_white_round_corner_red_broder">
                <ImageView
                    android:id="@+id/fail_img_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_6sdp"
                    />
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/photo_camera"/>
                <TextView
                    android:id="@+id/tv_addimage4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/select_image"
                    android:textSize="@dimen/_11sdp"
                    android:layout_below="@+id/img4"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_57sdp"
        android:layout_alignParentBottom="true"

        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/gradient_login_button">
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/submit"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_notifywho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"

            android:background="@drawable/gradient_red_button">

            <TextView
                android:id="@+id/tv_notifytask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/notifywho"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>


        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>