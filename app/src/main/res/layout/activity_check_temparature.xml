<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logintopbg">
    <RelativeLayout
        android:id="@+id/rl_top_taskdetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
      >

        <RelativeLayout
            android:id="@+id/rl_back_temptails"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/left_arrow"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14sdp"
            android:text="@string/task"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top_taskdetails"
        android:background="@drawable/rectangle_white_top_two_rounded_corner">
    <TextView
        android:id="@+id/tv_general_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/generalbuilding"
        android:textColor="@color/text_color_check"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_12sdp"
       />
    <RelativeLayout
        android:id="@+id/tv_etarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginLeft="@dimen/_26sdp"
        android:layout_marginRight="@dimen/_26sdp"
        android:background="@drawable/rectangular_shape_round_gery_broder"
        android:layout_below="@+id/tv_general_task_name"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:hint="@string/input_tempa"
            android:textSize="@dimen/_11sdp"
            android:gravity="top"
            android:padding="@dimen/_4sdp"
            android:background="@drawable/rectangular_shape_round_gery_broder"/>

        <Button
            android:id="@+id/btn_submit_input"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/gradient_red_button"
            android:layout_below="@+id/et_input"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tesk_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_etarea"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        android:gravity="center"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/text_color_check"
        android:layout_marginTop="@dimen/_30sdp"/>
    </RelativeLayout>
</RelativeLayout>