<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg">
    <RelativeLayout
        android:id="@+id/rl_top_taskdetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/rectangular_shape_blue">

        <RelativeLayout
            android:id="@+id/rl_back_fixfault"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/left_arrow"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_notifywho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14sdp"
            android:text="@string/fix_fault"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_margin="@dimen/_12sdp"
        android:layout_below="@+id/rl_top_taskdetails"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_103sdp"
            android:background="@drawable/rectangular_shape_white">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/qr_image" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_preescan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:text="@string/press_scan"
                    android:textColor="@color/seek_color_less_30"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tv_bcomp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tv_bcomp_element_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_servicng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rectangular_shape_white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_Company"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_8sdp"
                        android:textColor="@color/grey"
                        android:paddingRight="@dimen/_8sdp"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_site"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/tv_Select_category"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_select_work"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/tv_Select_category"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:drawableRight="@drawable/down_arrow"
                        android:gravity="center_vertical"
                        android:hint="Select work carried out today"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/tv_select_date"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/tv_Select_category"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:gravity="center_vertical"
                        android:hint="Select date for next service due"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp"
                        android:textColor="@color/grey"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_11sdp" />

                    <EditText
                        android:id="@+id/et_servicing_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:gravity="top"
                        android:hint="Description of work"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_11sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">

                        <RelativeLayout
                            android:id="@+id/rl_camera"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/rectangular_shape_blue_button">

                            <ImageView
                                android:id="@+id/camera"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:background="@drawable/cameraicon" />
                            <TextView
                                android:id="@+id/tv_camera"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/camera"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text="TAKE PHATO"/>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/img_phato"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/rl_camera" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_total_spend"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/time_spent"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/et_hour"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="@string/hour"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_11sdp"
                            android:inputType="number"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                        <EditText
                            android:id="@+id/et_min"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="@string/min"
                            android:inputType="number"
                            android:padding="@dimen/_5sdp"
                            android:textSize="@dimen/_11sdp"
                            android:focusableInTouchMode="false"
                            android:textColor="@color/grey"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_labour_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/labour_charge"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/et_labourcharge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:padding="@dimen/_5sdp"
                            android:inputType="number"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_part_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/Part_cost"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/et_part_cost"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:inputType="number"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_total_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="@string/total_cost"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tv_total_costval"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />


                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">

                        <EditText
                            android:id="@+id/et_name_of_enginner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="@string/name_of_enginner"
                            android:textSize="@dimen/_11sdp"
                            android:singleLine="true"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">

                        <EditText
                            android:id="@+id/et_name_of_company"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="@string/company_name"
                            android:textSize="@dimen/_11sdp"
                            android:padding="@dimen/_5sdp"
                            android:singleLine="true"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="@string/date"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_11sdp"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        >

                        <TextView
                            android:id="@+id/tv_engineer_signaturehere"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:text="@string/engineer_signature"
                            android:background="@drawable/rectangular_shape_grey"/>
                        <ImageView
                            android:id="@+id/img_engineer_sign"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rectangular_shape_thin_round_gery_broder">

                        <EditText
                            android:id="@+id/et_managername"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="@string/manager_name"
                            android:textSize="@dimen/_11sdp"
                            android:padding="@dimen/_5sdp"
                            android:background="@drawable/rectangular_shape_thin_round_gery_broder" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_margin="@dimen/_5sdp"
                        >
                        <TextView
                            android:id="@+id/tv_manager_signaturehere"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:background="@drawable/rectangular_shape_grey"
                            android:text="@string/manager_signature"/>
                        <ImageView
                            android:id="@+id/img_manager_sign"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_header_color"
        android:orientation="horizontal">

        <!--  <RelativeLayout
              android:id="@+id/rl_fault_submit"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/_10sdp"
              android:layout_weight="1"
              android:background="@drawable/rectangle_red_rounded_corner_">

              <TextView
                  android:id="@+id/tv_submit"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/_5sdp"
                  android:gravity="center"
                  android:text="Submit "
                  android:textColor="@color/white"
                  android:textSize="@dimen/_14sdp" />


          </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/rl_fault_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/rectangular_shape_blue_rounded_corner">
            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/submit"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_notifywho"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"

            android:background="@drawable/rectangle_red_rounded_corner_">

            <TextView
                android:id="@+id/tv_notifytask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/notifywho"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"/>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>