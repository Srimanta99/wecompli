<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_fault"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/log_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_110sdp"
        android:text="Name"

        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_alignParentRight="true"
        android:text="Date  222222222"
        android:layout_marginRight="@dimen/_5sdp"
        android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/log_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"

            android:layout_marginLeft="@dimen/_10sdp"

            android:text="Note :"
            android:layout_below="@+id/log_date"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/log_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/_12sdp"

            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"
            android:text="Note "
            android:layout_below="@+id/log_date"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toRightOf="@+id/log_note"
            android:gravity="center_vertical"/>
</RelativeLayout>
</RelativeLayout>