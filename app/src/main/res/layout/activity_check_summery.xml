<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rectangular_shape_blue">
        </ImageView>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/left_arrow"/>
        <TextView
            android:id="@+id/tv_checksummery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_14sdp"
            android:gravity="center_horizontal"
            android:text="@string/checksummery"/>
        <TextView
            android:id="@+id/tv_select_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_begin"
            android:textColor="#8c9fbf"
           app:layout_constraintTop_toBottomOf="@+id/tv_checksummery"
            android:textSize="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
           />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview_check_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_62sdp"
        android:layout_marginTop="@dimen/_60sdp"
        app:layout_constraintBottom_toTopOf="@+id/imgbb"
        app:layout_constraintTop_toBottomOf="@+id/header">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/imgbb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bottom_header_color"></ImageView>

    <TextView
        android:id="@+id/tv_total_fault_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/total_fault"
        android:gravity="center"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/white"
        android:background="@drawable/rectangula_red_rounded_corner_"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>