<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bgcamera"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:background="@drawable/rectangle_light_gray_rounded_corner"
    android:layout_marginBottom="@dimen/_7sdp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_checname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="left"
            android:textColor="#51688e"
            android:textSize="@dimen/_13sdp"
            android:padding="@dimen/_5sdp"></TextView>
        <TextView
            android:id="@+id/tv_checkdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"
            android:gravity="left"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_95sdp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        android:background="@drawable/rectangular_shape_white_round_corner_red_broder"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"

            android:background="@drawable/camerad"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/white"


            android:textSize="@dimen/_10sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/red_button_color"
            android:padding="@dimen/_5sdp"
            android:text="@string/camera"></TextView>

    </LinearLayout>
