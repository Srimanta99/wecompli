<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_messagearea"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_130sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
        android:background="@drawable/rectangular_shape_white_round_corner_lightgrey_broder"
          >
        <ImageView
            android:id="@+id/imgthik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_tick"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerHorizontal="true">

        </ImageView>
        <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"

            android:layout_below="@+id/imgthik"
                ></TextView>

    </RelativeLayout>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_30sdp"

        android:layout_marginBottom="@dimen/_14sdp"
        android:text="GO TO CHECKLIST"

        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/rl_messagearea"
        android:background="@drawable/rectangle_shape_red_rounded_corner_"

        android:layout_centerHorizontal="true"></Button>
</RelativeLayout>